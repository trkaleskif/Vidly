@model Vidly.Models.Movie

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre : @Model.Genre</li>
    <li>Release Date : @Model.ReleaseDate.ToShortDateString()</li>
    <li>Date Added : @Model.AddedDate.ToShortDateString()</li>
    <li>Number in Stock : @Model.NumberInStock</li>
</ul>
